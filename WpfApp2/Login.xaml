<Page x:Class="WpfApp2.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login" Background="White">

    <Grid>
        <TextBlock x:Name="txtBlockAu" HorizontalAlignment="Center" Margin="0,34,0,0" TextWrapping="Wrap" Text="Авторизация" VerticalAlignment="Top" FontSize="20"/>
        <TextBox HorizontalAlignment="Center" Margin="0,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" FontSize="18"
                 x:Name="textBlockLogin"/>
        <TextBlock x:Name="txtBlockLog" HorizontalAlignment="Left" Margin="300,81,0,0" TextWrapping="Wrap" Text="Введите логин" VerticalAlignment="Top" FontSize="16"/>

        <TextBlock x:Name="txtBlockPas" HorizontalAlignment="Left" Margin="300,166,0,0" TextWrapping="Wrap" Text="Введите пароль" VerticalAlignment="Top" FontSize="16"/>
        <TextBox HorizontalAlignment="Center" Margin="0,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" FontSize="18"
                 x:Name="textBlockPassword"/>

        <Button x:Name="btnLogIn" Content="Войти" HorizontalAlignment="Center" Margin="0,260,0,0" VerticalAlignment="Top" Width="179" Height="33"
                Click="Button_Click"/>
        <Button x:Name="btnReg" Content="Зарегистрироваться" HorizontalAlignment="Center" Margin="0,316,0,0" VerticalAlignment="Top" Width="180" Height="33"/>

        <TextBlock x:Name="txtBlockPhone" Visibility="Hidden" HorizontalAlignment="Center" FontSize="18" Margin="0,126,0,0" TextWrapping="Wrap" Text="Введите номер телефона" VerticalAlignment="Top"/>
        
        <Button x:Name="btnContract" Visibility="Hidden" Content="Подключить тариф" HorizontalAlignment="Center" Margin="0,293,0,0" VerticalAlignment="Top" Width="180"
                Click="btnContract_Click"/>
        <TextBox x:Name="txtBoxPhone" HorizontalAlignment="Center" Visibility="Hidden" Margin="0,210,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" FontSize="18"
         />

    </Grid>
</Page>
